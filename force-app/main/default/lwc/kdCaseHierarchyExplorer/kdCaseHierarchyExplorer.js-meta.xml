<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata"
                          fqn="kdCaseHierarchyExplorer"
                          apiVersion="60.0">
    <!-- Required to make the component visible in the Lightning App Builder -->
    <isExposed>true</isExposed>

    <!-- Declare this component usable in Record Pages -->
    <targets>
        <target>lightning__RecordPage</target>
    </targets>

    <!-- Limit this component to be used only on Case records -->
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <object>Case</object>
            </objects>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
